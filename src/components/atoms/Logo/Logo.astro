---
const { animationdirection = "fade-right", textColor = '[--secundary-color]', fontSize = '', fontSizeSlogan = "", isMobile = false } = Astro.props;
---
{isMobile ? (
  <a data-aos={animationdirection} href="/" class={`flex flex-col flex-1 font-normal text-${textColor} relative`}>
    <h1 class="text-[2.3rem] font-FjallaOne tracking-normal">Nearshoring News</h1>
    <h4 class="text-[1rem] absolute top-[73%] bottom-0">We bring markets closer</h4>
  </a>
) : (
  <a data-aos={animationdirection} href="/" class={`hidden md:flex flex-col text-left font-normal text-${textColor} relative`}>
    <h1 class={`text-[7.2vw] font-FjallaOne tracking-normal`}>Nearshoring News</h1>
    <h4 class={`text-[2vw] absolute top-[73%] bottom-0`}>We bring markets closer</h4>
  </a>
)}

<style>
  .logo {
    padding-block: 1rem;
    writing-mode: horizontal-tb;
  }
</style>
