---
import HamburgerButton from "@components/atoms/HamburgerButton/HamburgerButton.astro";
import NavMenu from "@components/atoms/NavMenu/NavMenu.astro";
---
<script>
    import HamburgerButton from "@controllers/hamburger.controller";

</script>



<header class="w-full sticky top-0 bg-black flex md:hidden">
    <HamburgerButton />

</header>

<aside
  class="panel bg-black absolute w-full h-full flex flex-col lg:hidden justify-start items-start pl-3 pt-[10rem] *:text-2xl"
>
  <NavMenu placement="bottom"/>
</aside>


<style>
    .panel {
        z-index: 1000;
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
    }
    .panel.is-active {
        transform: translateX(0);
    }
    .panel ul {
        list-style: none;
    }
    .panel ul li {
        margin-bottom: 1rem;
    }
    .panel ul li a {
        color: white;
        text-decoration: none;
    }
    .panel ul li a:hover {
        color: var(--guardsman-red-500);
    }
    .panel ul li a.active {
        color: var(--guardsman-red-500);
        }
</style>